<p id="notice"><%= notice %></p>

<h1>Work Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>User</th>
      <th>Start work</th>
      <th>End work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_schedules.each do |work_schedule| %>
      <tr>
        <td><%= work_schedule.day %></td>
        <td><%= work_schedule.user.email %></td>
        <td><%= work_schedule.start_work %></td>
        <td><%= work_schedule.end_work %></td>
        <td><%= link_to 'Show', work_schedule %></td>
        <td><%= link_to 'Edit', edit_work_schedule_path(work_schedule) %></td>
        <td><%= link_to 'Destroy', work_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

